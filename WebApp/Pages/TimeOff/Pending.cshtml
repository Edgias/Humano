@page
@model Edgias.Humano.WebApp.Pages.TimeOff.PendingModel
@{
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Leave Applications</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Leave Applications</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                @if (Model.Applications.Any())
                {
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">
                                
                            </div>
                            <div class="card-tools mt-1">
                                <div class="input-group input-group-sm" style="width: 400px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Date Submitted</th>
                                        <th>Employee</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Applications)
                                    {
                                        <tr>
                                            <td>@item.DateSubmitted.ToString("dd-MMM-yyyy")</td>
                                            <td>
                                                <a asp-page="/Employee/Details" asp-route-id="@item.EmployeeId">
                                                    @item.Employee
                                                </a>
                                            </td>
                                            <td>@item.StartDate.ToString("dd-MMM-yyyy")</td>
                                            <td>@item.EndDate.ToString("dd-MMM-yyyy")</td>
                                            <td><span class="badge badge-info">@item.LeaveStatus</span></td>
                                            <td>
                                                <a class="text-dark mr-2" href="#">
                                                    <i class="fas fa-check"></i>
                                                </a>
                                                <a class="text-danger" href="#">
                                                    <i class="fas fa-times-circle"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>

                        
                    </div>
                }
                else
                {
                    <div class="card">

                        <div class="card-body">
                            <div class="block text-center" style="margin:20px">
                                <object data="~/img/no_data.svg" width="300" height="100"></object>
                                <br />
                                <span class="h3 text-muted">No Pending Applications</span><br />
                                
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</section>