@model TimesheetModalModel

<div class="modal fade" id="timesheet-modal">
    <div class="modal-dialog modal-lg">
        <form method="post" asp-page-handler="Timesheet">
            @Html.HiddenFor(we => we.EmployeeId)
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Timesheet</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Date" class="col-sm-2 col-form-label">Date <code>*</code></label>
                        <input type="date" class="form-control form-control-sm" asp-for="Date" placeholder="Enter date">
                    </div>
                    <div class="form-group">
                        <label asp-for="NumberOfHours" class="col-sm-3 col-form-label">Number of Hours <code>*</code></label>
                        <input type="number" class="form-control form-control-sm" asp-for="NumberOfHours" placeholder="Enter hours">
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-sm-3 col-form-label">Description <code>*</code></label>
                        <textarea rows="5" class="form-control form-control-sm" asp-for="Description" placeholder="Enter description"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectId" class="col-sm-3 col-form-label">Project </label>
                        <select class="form-control" asp-for="ProjectId" asp-items="Model.Projects">
                            <option value="">Please select</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </form>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
