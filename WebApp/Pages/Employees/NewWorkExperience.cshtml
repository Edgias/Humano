@page
@model Edgias.Humano.WebApp.Pages.Employees.NewWorkExperienceModel
@{
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>New Experience</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/Employees/Details/@Model.EmployeeId">Employee Profile</a></li>
                    <li class="breadcrumb-item active">New Experience</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-info">

                    <form id="addExperienceForm" method="post" class="form-horizontal">
                        @Html.HiddenFor(d => d.EmployeeId)
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="JobTitleId" class="col-sm-3 col-form-label">Job Title <code>*</code></label>
                                <select class="form-control" asp-for="JobTitleId" asp-items="Model.JobTitles">
                                    <option value="">Please select</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="GradeId" class="col-sm-3 col-form-label">Department <code>*</code></label>
                                <select class="form-control" asp-for="GradeId" asp-items="Model.Grades">
                                    <option value="">Please select</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate" class="col-sm-2 col-form-label">Start Date <code>*</code></label>
                                <input type="date" class="form-control form-control-sm" asp-for="StartDate" placeholder="Enter date">
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate" class="col-sm-2 col-form-label">End Date </label>
                                <input type="date" class="form-control form-control-sm" asp-for="EndDate" placeholder="Enter date">
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary" class="col-sm-2 col-form-label">Salary <code>*</code></label>
                                <input type="number" class="form-control form-control-sm" asp-for="Salary" placeholder="Enter salary">
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-sm bg-gradient-primary">Submit</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        $(function () {

            $('#addExperienceForm').validate({
                rules: {
                    JobTitleId: {
                        required: true,
                    },
                    GradeId: {
                        required: true,
                    },
                    StartDate: {
                        required: true,
                    },

                },
                messages: {
                    StartDate: {
                        required: "Please enter start date"
                    },
                    JobTitleId: {
                        required: "Please select job title"
                    },
                    GradeId: {
                        required: "Please select grade"
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });
    </script>
}